<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/avatar_placeholder"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_background" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arya Muller"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Tabs Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tab_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Состояние"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#6200EE"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tab_achievements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Достижения"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#808080"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tab_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Активность"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#808080"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <!-- Stats Section -->
        <GridLayout
            android:layout_width="400dp"
            android:layout_height="170dp"
            android:rowCount="2"
            android:columnCount="2"
            android:paddingVertical="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/quiz_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Курса"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/leaderboard_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Тестирования"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Симуляции"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/recall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88% Результат"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>
        </GridLayout>

        <!-- Strongest Topics Section -->

        <!-- Topic List -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:text="Лучшее тестирование"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/basic_background"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Основы преподавания"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90% Результат"
                    android:textSize="14sp"
                    android:textColor="#FF5722" />
            </LinearLayout>

            <!-- Repeat above block for other topics -->

            </LinearLayout>
        <!-- Лучшая симуляция -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Лучшая симуляция"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <!-- Topic List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/basic_background"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Основы преподавания"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90% Результат"
                    android:textSize="14sp"
                    android:textColor="#FF5722" />
            </LinearLayout>

        </LinearLayout>

        <!-- Улучшите свои результаты -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Улучшите свои результаты"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <!-- Topic List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_student_types"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Типы учеников"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% Результат"
                    android:textSize="14sp"
                    android:textColor="#FF5722" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_course"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Проблемные ситуации"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60% Результат"
                    android:textSize="14sp"
                    android:textColor="#FF5722" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
