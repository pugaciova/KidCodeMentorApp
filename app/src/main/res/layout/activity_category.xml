<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp"
    >

    <!-- Header Section with Main Background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Icon -->

        <!-- Category Text -->
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:contentDescription="Back Icon"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Категории"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Title Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Готов обучаться?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Выбери курс."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Scrollable Content Section with White Background -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/category_white_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="8dp"
            android:clipToOutline="true">

            <!-- Tab Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Все"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Избранное"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Рекомендовано"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Course Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

            <!-- Основы преподавания -->
            <LinearLayout
                android:id="@+id/course_teaching_basics"
                android:layout_width="15dp"
                android:layout_height="220dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_teaching_basics"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Основы преподавания"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7 уроков"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Курс Типы учеников -->
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_background2"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_types_students"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Типы учеников"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 уроков"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Курс Проблемные ситуации -->
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_background1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_problem_situations"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Проблемные ситуации"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 уроков"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Курс Психологические приемы -->

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="220dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/card_background3"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_psyco_trics" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Приемы психологии"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10 уроков"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Курс Выбор материала -->

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="220dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_background3"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="#FFEEB4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_choose_material"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выбор материала"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 уроков"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Курс Интерактивные уроки -->

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="220dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_background3"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:backgroundTint="#CCB4FF">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_inter_lessons"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Интерактивные уроки"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 уроков"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>
                <!-- Курс Дополнительные занятия -->

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="220dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_background2"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_dop_lessons"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Доп. занятия"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 уроков"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Курс Критерии оценки урока -->

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="220dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_background1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_criteria"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Критерии оценки урока"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 уроков"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:gravity="center" />

                </LinearLayout>

            </GridLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>
