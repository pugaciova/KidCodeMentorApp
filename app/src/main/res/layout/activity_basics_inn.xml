<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".BasicsInnActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon" />

            <!-- Title -->
            <TextView
                android:id="@+id/detail_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Контент курса"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Bookmark Icon -->
            <ImageView
                android:id="@+id/bookmark_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_bookmark" />
        </RelativeLayout>

        <!-- Course Title -->
        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Основы преподавания"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Lessons Info -->
        <TextView
            android:id="@+id/course_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="7 Уроков    •    1ч 20мин"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Course Description -->
        <TextView
            android:id="@+id/course_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="После данного курса вы сможете понять с чего начать успешное преподавание."
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Lessons List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/category_white_content"
            android:orientation="vertical">

            <!-- Lesson Trailer -->
            <LinearLayout
                android:id="@+id/lesson_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lesson_icon_1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_trailer" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lesson_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00 - Trailer"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lesson_duration_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1:10 min"
                            android:textColor="#777"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Линейный ProgressBar -->
                <ProgressBar
                    android:id="@+id/lesson_progress_1"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="75"
                    android:max="100"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_custom" />
            </LinearLayout>

            <!-- Lesson 1 Основы преподавания -->
            <LinearLayout
                android:id="@+id/lesson_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lesson_icon_2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_basics" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lesson_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01 - Методы преподавания"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lesson_duration_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:10 min"
                            android:textColor="#777"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lesson_lock_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock" />


                </LinearLayout>

                <!-- Линейный ProgressBar -->

                <ProgressBar
                    android:id="@+id/lesson_progress_2"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_custom" />
            </LinearLayout>

            <!-- Lesson 2 Приложения для работы -->
            <LinearLayout
                android:id="@+id/lesson_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lesson_icon_3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/lesson_icon_3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lesson_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02 - Приложения для работы"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lesson_duration_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:10 min"
                            android:textColor="#777"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lesson_lock_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock" />
                </LinearLayout>

                <!-- Линейный ProgressBar -->
                <ProgressBar
                    android:id="@+id/lesson_progress_3"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_custom" />
            </LinearLayout>

            <!-- Lesson 3 Специфика работы с детьми -->
            <LinearLayout
                android:id="@+id/lesson_item_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lesson_icon_4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/lesson_icon_4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lesson_title_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03 - Специфика работы с детьми"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lesson_duration_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:10 min"
                            android:textColor="#777"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lesson_lock_4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock" />
                </LinearLayout>

                <!-- Линейный ProgressBar -->
                <ProgressBar
                    android:id="@+id/lesson_progress_4"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_custom" />
            </LinearLayout>

            <!-- Lesson 5 Начальный этап и знакомство -->
            <LinearLayout
                android:id="@+id/lesson_item_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lesson_icon_5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/lesson_icon_5" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lesson_title_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04 - Начальный этап и знакомство"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lesson_duration_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:10 min"
                            android:textColor="#777"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lesson_lock_5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock" />
                </LinearLayout>

                <!-- Линейный ProgressBar -->
                <ProgressBar
                    android:id="@+id/lesson_progress_5"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_custom" />
            </LinearLayout>

            <!-- Lesson 6 Тестирование -->
            <LinearLayout
                android:id="@+id/lesson_item_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lesson_icon_6"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/test_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lesson_title_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05 - Тестирование"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lesson_duration_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:10 min"
                            android:textColor="#777"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lesson_lock_6"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock" />
                </LinearLayout>

                <!-- Линейный ProgressBar -->
                <ProgressBar
                    android:id="@+id/lesson_progress_6"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_custom" />
            </LinearLayout>

            <!-- Lesson 6 Симуляция -->
            <LinearLayout
                android:id="@+id/lesson_item_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lesson_icon_7"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/simulation_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lesson_title_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06 - Симуляция"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lesson_duration_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:10 min"
                            android:textColor="#777"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lesson_lock_7"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock" />
                </LinearLayout>

                <!-- Линейный ProgressBar -->
                <ProgressBar
                    android:id="@+id/lesson_progress_7"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar_custom" />
            </LinearLayout>


        </LinearLayout>

        <!-- My Progress Button -->
        <Button
            android:id="@+id/myprogress_button"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="#E8E4EF"
            android:text="Мой прогресс"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
